<section id="affiliate-carousel" class="mt-14 h-[500px]">
  <div class="swiper w-screen overflow-hidden">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide w-full h-[36rem] relative">
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 flex flex-col items-center bg-gray-50 hover:bg-downy-300">
            <p class="font-black text-center text-3xl w-44">
              {{ block.settings.text }}
            </p>
            <a
              class="mt-8 py-3 px-6 font-black bg-white hover:bg-downy-300"
              href="{{ block.settings.url }}"
            >
              {{- block.settings.btn_copy -}}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
    <div
      class="swiper-pagination [&>*]:w-5 [&>*]:h-5 [&>*]:bg-downy-300 [&>*]:opacity-25 [&>*.swiper-pagination-bullet-active]:opacity-100"
    ></div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const heroSwiper = new Swiper("#affiliate-carousel .swiper", {
      spaceBetween: 16,
      slidesPerView: 'auto',
      pagination: {
        el: "# affiliate-carousel .swiper-pagination",
        type: "bullets",
        clickable: true
      }
    });
  });
</script>

{% schema %}
{
  "name": "Affiliate Carousel",
  "settings": [],
  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "text",
          "id": "title-copy",
          "label": "Title copy"
        },
        {
          "type": "text",
          "id": "card-copy",
          "label": "Card copy"
        }
      ]
    }
  ]
}
{% endschema %}
