{% paginate customer.addresses by 5 %}

<div class="container text-center">
  <div class="row">
    <div class="col-12">
      <header class="section-header">
        <h1>{{ 'customer.addresses.title' | t }}</h1>
        <p><a href="{{ routes.account_url }}">{{ 'customer.account.return' | t }}</a></p>
        <p>
          <button type="button" class="btn btn-primary" data-bs-toggle="collapse" data-bs-target="#AddressNewForm"
            id="AddressNewButton" aria-expanded="false" aria-owns="AddressNewForm">{{ 'customer.addresses.add_new' | t
            }}</button>
        </p>
      </header>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      {% comment %}
      Add address form, hidden by default
      {% endcomment %}
      <div id="AddressNewForm" class="collapse">
        {% form 'customer_address', customer.new_address %}
        <h2>{{ 'customer.addresses.add_new' | t }}</h2>

        <div class="row">
          <div class="col">
            <label class="form-label" for="AddressFirstNameNew">{{ 'customer.addresses.first_name' | t }}</label>
            <input class="form-control" type="text" id="AddressFirstNameNew" name="address[first_name]"
              value="{{ form.first_name }}" autocomplete="given-name">
          </div>

          <div class="col">
            <label class="form-label" for="AddressLastNameNew">{{ 'customer.addresses.last_name' | t }}</label>
            <input class="form-control" type="text" id="AddressLastNameNew" name="address[last_name]"
              value="{{ form.last_name }}" autocomplete="family-name">
          </div>
        </div>

        <div class="row">
          <div class="col">
            <label class="form-label" for="AddressCompanyNew">{{ 'customer.addresses.company' | t }}</label>
            <input class="form-control" type="text" id="AddressCompanyNew" name="address[company]"
              value="{{ form.company }}" autocomplete="organization">

            <label class="form-label" for="AddressAddress1New">{{ 'customer.addresses.address1' | t }}</label>
            <input class="form-control" type="text" id="AddressAddress1New" name="address[address1]"
              value="{{ form.address1 }}" autocomplete="street-address address-line1">

            <label class="form-label" for="AddressAddress2New">{{ 'customer.addresses.address2' | t }}</label>
            <input class="form-control" type="text" id="AddressAddress2New" name="address[address2]"
              value="{{ form.address2 }}" autocomplete="street-address address-line2">
          </div>
        </div>

        <div class="row">
          <div class="col">
            <label class="form-label" for="AddressCityNew">{{ 'customer.addresses.city' | t }}</label>
            <input class="form-control" type="text" id="AddressCityNew" name="address[city]" value="{{ form.city }}"
              autocomplete="address-level2">
          </div>

          <div class="col">
            <label class="form-label" for="AddressCountryNew">{{ 'customer.addresses.country' | t }}</label>
            <select class="form-select" id="AddressCountryNew" name="address[country]" data-default="{{ form.country }}"
              autocomplete="country">{{ all_country_option_tags }}</select>
          </div>
        </div>

        <div id="AddressProvinceContainerNew" class="row">
          <div class="col">
            <label class="form-label" for="AddressProvinceNew">{{ 'customer.addresses.province' | t }}</label>
            <select class="form-select" id="AddressProvinceNew" name="address[province]"
              data-default="{{ form.province }}" autocomplete="address-level1"></select>
          </div>

          <div class="col">
            <label class="form-label" for="AddressZipNew">{{ 'customer.addresses.zip' | t }}</label>
            <input class="form-control" type="text" id="AddressZipNew" name="address[zip]" value="{{ form.zip }}"
              autocapitalize="characters" autocomplete="postal-code">
          </div>
        </div>

        <div class="row">
          <div class="col">
            <label class="form-label" for="AddressPhoneNew">{{ 'customer.addresses.phone' | t }}</label>
            <input class="form-control" type="tel" id="AddressPhoneNew" name="address[phone]" value="{{ form.phone }}"
              autocomplete="phone">
          </div>
        </div>

        <div class="form-check my-3 ps-0">
          <label class="form-check-label" for="address_default_address_new">{{ 'customer.addresses.set_default' | t
            }}</label>
          {{ form.set_as_default_checkbox }}
        </div>

        <div class="d-flex" aria-label="submit or cancel button group">
          <input type="submit" class="btn btn-primary w-50 me-3" value="{{ 'customer.addresses.add' | t }}">
          <button type="button" class="btn btn-outline-secondary w-50 ms-3" data-bs-toggle="collapse"
            data-bs-target="#AddressNewForm">{{
            'customer.addresses.cancel' | t }}</button>
        </div>

        {% endform %}
        <hr>
      </div>

      {% comment %}
      List all customer addresses with a unique edit form.
      Also add pagination in case they have a large number of addresses
      {% endcomment %}
      <ul class="list-group list-group-flush">
        {% for address in customer.addresses %}
        <li class="list-group-item">
          <div class="address text-center">
            {% if address == customer.default_address %}
            <h2>{{ 'customer.addresses.default' | t }}</h2>
            {% endif %}

            {{ address | format_address }}


            <div class="d-flex justify-content-center" aria-label="edit and delte button group">
              <button id="EditFormButton_{{ address.id }}" type="button" class="btn btn-warning me-2"
                data-form-id="{{ address.id }}" data-bs-toggle="collapse" data-bs-target="#EditAddress_{{ address.id }}"
                aria-owns="EditAddress_{{ address.id }}" aria-expanded="false">
                {{ 'customer.addresses.edit' | t }}
              </button>
              <form class="address-delete-form" method="post" action="/account/addresses/{{ address.id }}"
                data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
                <input type="hidden" name="_method" value="delete">
                <button type="submit" class="btn btn-outline-danger ms-2" data-target="{{ address.url }}"
                  data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
                  {{ 'customer.addresses.delete' | t }}
                </button>
              </form>
            </div>

          </div>

          <div id="EditAddress_{{ address.id }}" class="collapse mt-3">
            {% form 'customer_address', address %}

            <h2>{{ 'customer.addresses.edit_address' | t }}</h2>

            <div class="row">
              <div class="col">
                <label class="form-label" for="AddressFirstName_{{ form.id }}">{{ 'customer.addresses.first_name' | t
                  }}</label>
                <input class="form-control" type="text" id="AddressFirstName_{{ form.id }}" name="address[first_name]"
                  value="{{ form.first_name }}" autocomplete="given-name">
              </div>

              <div class="col">
                <label class="form-label" for="AddressLastName_{{ form.id }}">{{ 'customer.addresses.last_name' | t
                  }}</label>
                <input class="form-control" type="text" id="AddressLastName_{{ form.id }}" name="address[last_name]"
                  value="{{ form.last_name }}" autocomplete="family-name">
              </div>
            </div>

            <div class="row">
              <div class="col">
                <label class="form-label" for="AddressCompany_{{ form.id }}">{{ 'customer.addresses.company' | t
                  }}</label>
                <input class="form-control" type="text" id="AddressCompany_{{ form.id }}" name="address[company]"
                  value="{{ form.company }}" autocomplete="organization">

                <label class="form-label" for="AddressAddress1_{{ form.id }}">{{ 'customer.addresses.address1' | t
                  }}</label>
                <input class="form-control" type="text" id="AddressAddress1_{{ form.id }}" name="address[address1]"
                  value="{{ form.address1 }}" autocomplete="street-address address-line1">

                <label class="form-label" for="AddressAddress2_{{ form.id }}">{{ 'customer.addresses.address2' | t
                  }}</label>
                <input class="form-control" type="text" id="AddressAddress2_{{ form.id }}" name="address[address2]"
                  value="{{ form.address2 }}" autocomplete="street-address address-line2">
              </div>
            </div>

            <div class="row">
              <div class="col">
                <label class="form-label" for="AddressCity_{{ form.id }}">{{ 'customer.addresses.city' | t }}</label>
                <input class="form-control" type="text" id="AddressCity_{{ form.id }}" name="address[city]"
                  value="{{ form.city }}" autocomplete="address-level2">
              </div>

              <div class="col">
                <label class="form-label" for="AddressCountry_{{ form.id }}">{{ 'customer.addresses.country' | t
                  }}</label>
                <select id="AddressCountry_{{ form.id }}" class="address-country-option form-select"
                  data-form-id="{{ form.id }}" name="address[country]" data-default="{{ form.country }}"
                  onchange="updateProvincesCurernt('{{ form.id }}')" autocomplete="country">{{
                  all_country_option_tags }}</select>
              </div>
            </div>

            <div class="row">
              <div id="AddressProvinceContainer_{{ form.id }}" class="col">
                <label class="form-label" for="AddressProvince_{{ form.id }}">{{ 'customer.addresses.province' | t
                  }}</label>
                <select class="form-select" id="AddressProvince_{{ form.id }}" name="address[province]"
                  data-default="{{ form.province }}" autocomplete="address-level1"></select>
              </div>

              <div class="col">
                <label class="form-label" for="AddressZip_{{ form.id }}">{{ 'customer.addresses.zip' | t }}</label>
                <input class="form-control" type="text" id="AddressZip_{{ form.id }}" name="address[zip]"
                  value="{{ form.zip }}" autocapitalize="characters" autocomplete="postal-code">
              </div>
            </div>

            <div class="row">
              <div class="col">
                <label class="form-label" for="AddressPhone_{{ form.id }}">{{ 'customer.addresses.phone' | t }}</label>
                <input class="form-control" type="tel" id="AddressPhone_{{ form.id }}" name="address[phone]"
                  value="{{ form.phone }}" autocomplete="phone">
              </div>
            </div>

            <div class="form-check ps-0 mt-2">
              <label class="form-check-label" for="address_default_address_{{ form.id }}">{{
                'customer.addresses.set_default' | t }}</label>
              {{ form.set_as_default_checkbox }}
            </div>

            <div class="d-flex mt-3" aria-label="confirm edit or cancel button group">
              <input type="submit" class="btn btn-primary w-50" value="{{ 'customer.addresses.update' | t }}">
              <button type="button" class="btn btn-outline-secondary w-50" data-bs-toggle="collapse"
                data-bs-target="#EditAddress_{{ address.id }}" data-form-id="{{ form.id }}">{{
                'customer.addresses.cancel' | t }}</button>
            </div>

            {% endform %}
            <hr>
          </div>
        </li>
        {% endfor %}
      </ul>

      {%- if paginate.pages > 1 -%}
      {% include 'pagination', paginate: paginate %}
      {%- endif -%}
    </div>
  </div>

</div>
{% endpaginate %}