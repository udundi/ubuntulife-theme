<div class="flex my-10 lg:my-0 w-screen px-6 lg:px-0 max-w-sm mx-auto lg:max-w-none lg:items-center">
  <div class="w-full lg:w-1/2 flex flex-col items-center">
    <h1 class="text-3xl font-black lg:text-4xl">SIGN UP</h1>
    <p class="mt-2 text-center lg:mt-6 lg:text-lg">Enter your details to sign up for an account</p>
    {% form 'create_customer', novalidate: 'novalidate' %}
      <div class="flex flex-col w-screen px-4 max-w-xs lg:max-w-md lg:mt-6">

        <label 
          class="mt-4" 
          for="input-first-name"
        >{{ 'customer.register.first_name' | t }}*</label>
        <input 
          class="mt-1 border border-black py-1 px-2 lg:py-2 lg:px-3 lg:text-lg"
          type="text" 
          name="customer[first_name]" 
          id="input-first-name"
          placeholder="First Name"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="given-name"
          {% if form.first_name %}value="{{ form.first_name }}" {% endif %}
        >

        <label 
          class="mt-4" 
          for="input-last-name"
        >{{ 'customer.register.last_name' | t }}*</label>
        <input 
          class="mt-1 border border-black py-1 px-2 lg:py-2 lg:px-3 lg:text-lg"
          type="text" 
          name="customer[last_name]" 
          id="input-last-name"
          placeholder="Last Name"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="family-name"
          {% if form.last_name %}value="{{ form.last_name }}" {% endif %}
        >

        <label 
          class="mt-4" 
          for="input-email">{{ 'customer.register.email' | t }}</label>
        <input 
          id="input-email"
          class="mt-1 border py-1 px-2 lg:py-2 lg:px-3 lg:text-lg {% if form.errors contains 'email' %}border-red-600{% else %}border-black{% endif %}" 
          type="email"
          name="customer[email]" 
          placeholder="Email" 
          {% if form.email %}
            value="{{ form.email }}"
          {% endif %} 
          autocorrect="off" 
          autocapitalize="off" 
          autocomplete="email"
          aria-required="true" 
          {%- if form.errors contains 'email' -%} 
            aria-invalid="true"
            aria-describedby="input-email-error"
          {%- endif -%}
        >

        {%- if form.errors contains 'email' -%}
          <span class="hidden">{{ 'general.accessibility.error' | t }} </span>
          <span class="text-center">{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email']}}.</span>
        {%- endif -%}
        
        <label 
          class="mt-4" 
          for="input-password">{{ 'customer.register.password' | t }}</label>
        <input 
          id="input-password"
          class="mt-1 border py-1 px-2 lg:py-2 lg:px-3 lg:text-lg {% if form.errors contains 'password' %}border-red-600{% else %}border-black{% endif %}" 
          type="password"
          name="customer[password]" 
          placeholder="Password" 
          aria-required="true" 
          {% if form.errors contains 'password' %}
            aria-invalid="true" 
            aria-describedby="input-password-error" 
          {% endif %}
        >
        
        {% if form.errors contains 'password' %}
            <span class="text-center">{{ form.errors.translated_fields['password'] | capitalize }} {{
              form.errors.messages['password']}}.</span>
        {% endif %}
          
        <input 
          class="mt-4 w-full bg-black text-white pt-2.5 pb-2 font-bold tracking-wider lg:pt-3.5 lg:pb-3"
          type="submit" 
          value="SIGN UP"
        >
      </div>
    {% endform %}
    <span class="mt-4 text-sm lg:mt-6 lg:text-base">Already have an account? <a class="underline" href="/account/login">Log In</a></span>
  </div>
  <div class="hidden lg:flex lg:w-1/2 lg:h-[calc(100vh-var(--header-offset))] overflow-hidden">
    {% section 'register-image' %}
  </div>
</div>