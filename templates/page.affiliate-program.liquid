    <image
      class="z-0 absolute hidden md:block w-full h-full object-cover object-bottom"
      src="{{ '2021-FlatLay-113_1.png' | file_img_url: 'x400' }}"
    />
    <div class="mt-12 md:mt-0 flex flex-col items-center relative z-10 px-2">
      <h1 class="text-3xl md:text-4xl xl:text-5xl tracking-wide font-black text-center md:text-neutral-800">
