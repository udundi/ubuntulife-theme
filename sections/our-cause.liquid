<section id="cause-section" class="mt-14 flex flex-col items-center">
  {% if section.settings.header != "" %}
    <h4 class="mt-5 text-xl lg:text-3xl font-black text-neutral-800">{{ section.settings.header }}</h4>
  {% endif %}
  {% if section.settings.text != "" %}
    <p class="text-center mt-3 max-w-sm lg:max-w-lg mx-4">{{ section.settings.text }}</p>
  {% endif %}
  {% if section.settings.link_text != "" %}
    <a href="{{ section.settings.link }}" class="underline text-downy-300 mt-1 lg:text-lg">{{ section.settings.link_text }}</a>
  {% endif %}
  <div class="swiper w-screen md:max-w-xl mt-5 lg:mt-9 px-4 overflow-hidden lg:max-w-[100rem]">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide w-full lg:w-1/3 h-[30rem] lg:h-auto lg:pr-2 lg:pl-2 lg:first:pl-0 lg:last:pr-0">
          <picture>
            <source media="(min-width: 640px)" srcset="{{ block.settings.image | image_url: width: 1280 }}">
            <source media="(max-width: 639px)" srcset="{{ block.settings.image | image_url: width: 640 }}">
            <img 
              class="w-full h-full aspect-square object-cover" 
              src="{{ block.settings.image | image_url: width: 1280 }}" 
              alt="{{ block.settings.image.alt }}">
          </picture>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-pagination [&>*]:w-5 [&>*]:h-5 [&>*]:bg-downy-300 [&>*]:opacity-25 [&>*.swiper-pagination-bullet-active]:opacity-100">
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    let init = false;
    let causeSwiper = Swiper;

    function swiperMode() {
      let mobile = window.matchMedia('(min-width: 0px) and (max-width: 1023px)');
      let desktop = window.matchMedia('(min-width: 1024px)');

      // Enable (for mobile)
      if (mobile.matches) {
        if (!init) {
          init = true;
          causeSwiper = new Swiper("#cause-section .swiper", {
            spaceBetween: 16,
            slidesPerView: 'auto',
            pagination: {
              el: "#cause-section .swiper-pagination",
              type: "bullets",
              clickable: true
            }
          });
        }
      } else if (desktop.matches) {
        if (causeSwiper.destroy) {
          causeSwiper.destroy();
        }
        init = false;
      }
    }

    // Run swiperMode on window resize
    window.addEventListener('resize', function() {
      swiperMode();
    })

    // Run on first load
    swiperMode();
  });
</script>

{% schema %}
{
  "name": "Cause",
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Header Copy"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Blurb Copy"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link URL"
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide image"
        }
      ]
    }
  ]
}
{% endschema %}