<picture>
  <source media="(min-width: 2560px)" srcset="{{ section.settings.image | image_url: width: 1920 }}">
  <source media="(min-width: 1024px)" srcset="{{ section.settings.image | image_url: width: 1280 }}">
  <source media="(max-width: 1023px)" srcset="{{ section.settings.image | image_url: width: 1 }}">
  <img
    src="{{ section.settings.image | image_url: width: 1280 }}" 
    alt="{{ section.settings.image.alt }}"
    width="1280"
    height="1280"
    class="min-w-full min-h-full object-cover">
</picture>

{% schema %}
{
  "name": "Register Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Featured Image"
    }
  ]
}
{% endschema %}