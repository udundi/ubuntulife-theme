<div class="py-16 sm:py-24 relative flex flex-col justify-center items-center bg-neutral-50">
  <h1 class="z-10 pointer-events-none px-2 text-3xl sm:text-4xl font-bold text-center md:text-neutral-800">
    {{ section.settings.header }}
  </h1>
  <p class="z-10 pointer-events-none mt-5 px-2 text-sm sm:text-base text-center font-medium max-w-xs sm:max-w-md">
    {{ section.settings.sub_header }}
  </p>
</div>

{% schema %}
{
  "name": "FAQ Header",
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Header Copy"
    },
    {
      "type": "text",
      "id": "sub_header",
      "label": "Sub Header Copy"
    }
  ]
}
{% endschema %}