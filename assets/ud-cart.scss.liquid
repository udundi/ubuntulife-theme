[v-cloak] {
  display: none;
}

#udCart {
  .slide-enter-from {
    opacity: 0.25;
    transform: translateX(100%);
  }
  .slide-enter-to {
    opacity: 1;
    transform: translateX(0);
  }
  .slide-enter-active {
    position: absolute;
  }

  .slide-leave-from {
    opacity: 1;
    transform: translateX(0);
  }
  .slide-leave-to {
    opacity: 0.25;
    transform: translateX(100%);
  }

  .slide-enter-active,
  .slide-leave-active {
    transition: all 500ms cubic-bezier(0.34, 1.26, 0.64, 1);
  }

  .fade-enter-active,
  .fade-leave-active {
    transition: all 500ms cubic-bezier(0.34, 1.26, 0.64, 1);
  }

  .fade-leave-from,
  .fade-enter-to {
    opacity: 1;
  }

  .fade-enter-from,
  .fade-leave-to {
    opacity: 0;
  }

}