.ud-square-image {
  width: 100%;
  position: relative;

  &:after {
    content: "";
    display: block;
    padding-bottom: 100%;
  }
  
  img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}

/* Cart */
.ud-cart-menu {
  width: 100%;
  @media (min-width: 576px) {
  	width: 400px;
  }
  position: fixed;
  top: 0;
  right: 0;
  height: 100vh;
  border-width: 0;
  border-radius: 0;
  background: #fff;
	z-index: 10800;
	-webkit-transform: translateX(100%);
			    transform: translateX(100%);
  @media (min-width: 576px) {
    -webkit-transform: translateX(400px);
  			    transform: translateX(400px);
  }
  -webkit-transition: all .25s ease-out;
  				transition: all .25s ease-out;

  &.ud-open {
  	-webkit-transform: translateX(0);
				    transform: translateX(0);
  }

  .ud-cart-header {
  	background: #fff;
  	-webkit-box-shadow: 0 0 35px 0 rgba(154,161,171,0.15);
				  	box-shadow: 0 0 35px 0 rgba(154,161,171,0.15);

    .col {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;

      .left-group {
        display: flex;
        flex-direction: row;
        align-items: center;

        .ud-close-cart {
          margin-right: 1rem;
          cursor: pointer;
        }

        h4 {
          color: #000;
          font-weight: 500;
          font-style: italic;
          text-transform: uppercase;
          margin: 0;
          letter-spacing: 1.51px;
        }
      }

      .right-group {
        display: flex;
        flex-direction: row;
        align-items: start;

        img {
          margin-right: .5rem;
        }

        span {
          font-size: 1.3rem;
        }
      }
    }
  }

  .ud-cart-items {
  	overflow: auto;

  }

  .ud-cart-checkout {
  	position: absolute;
		bottom: 0;
    padding: 1rem 1rem 2rem;
		background: #fff;
		z-index: 1;
    width: 100%;

    p {
      display: flex;
      flex-direction: row;
      justify-content: space-between;

      span {
        display: flex;
        align-self: center;
      }
    }
  }

  .ud-cart-empty {
  	height: 100vh;
  }

  .ud-item-title,
  .ud-item-price {
  	color: #333;
  }
}

body.ud-cart-open {
	> .ud-cart-backdrop {
		display: block;
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		background: rgba(0, 0, 0, 0.7);
		z-index: 10700;
		opacity: 1;
		overflow: hidden;
		-webkit-transition: all 0.5s ease-in-out;
						transition: all 0.5s ease-in-out;
	}
}

.ud-cart-backdrop {
	display: none;
	opacity: 0;
}
