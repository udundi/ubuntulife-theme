// Custom Inputs
.radio-bubble {
  padding: 0;
  margin: 0 0.75rem 0.75rem 0;

  label {
    font-weight: bold;
    color: black;
    border: 1px solid black;
    border-radius: 0.75rem;
    font-size: 0.875rem;
    cursor: pointer;
    padding: 0.2rem 1rem;
  }

  input {
    display: none;
  }

  input:checked ~ label {
    border: 1px solid #0D6EFD;
    background-color: #0D6EFD;
    color: white;
  } 
}

.radio-color {
  padding: 0;
  margin: 0 1.25rem 0 0;

  input {
    display: none;
  }

  input[value="Pink"] ~ label {
    background: #EE2B74;
    border-color: #EE2B74;
  }

  input[value="Blue"] ~ label {
    background: #2033D4;
    border-color: #2033D4;
  }

  input[value="White"] ~ label {
    background: #f8f8f8;
    border-color: #ccc;
  }

  input[value="Green"] ~ label {
    background: #34CC33;
    border-color: #34CC33;
  }

  input[value="Yellow"] ~ label {
    background: #FFD800;
    border-color: #FFD800;
  }

  input[value="Red"] ~ label {
    background: #FA2C2C;
    border-color: #FA2C2C;
  }

  input[value="Aqua"] ~ label {
    background: #9DC8FF;
    border-color: #9DC8FF;
  }

  input[value="Purple"] ~ label {
    background: #8538FF;
    border-color: #8538FF;
  }

  input[value="Orange"] ~ label {
    background: #FF8E3E;
    border-color: #FF8E3E;
  }

  input:checked ~ label:after {
    content: '';
  }

  label {
    position: relative;
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 50%;
    color: transparent;
    cursor: pointer;

    &:after {
      width: 2.25rem;
      height: 2.25rem;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      border-radius: 50%;
      box-shadow: 0 0 4px inherit;

      border-width: 1px;
      border-style: solid;
      border-color: inherit;
    }
  }
}

[v-cloak] {
  display: none;
